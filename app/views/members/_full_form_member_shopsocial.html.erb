<div class="longForm">
<%= simple_form_for(@member, :html => { :novalidate => true}) do |f| %>
  <fieldset>
    <legend>
      <script>utmx_section("section2")</script>
      <h2>Join Now. <span class="color2">Start Saving Today</span></h2>
      </noscript>
    </legend>
    <%  puts @member.address.inspect %>
    <%= f.error_messages :header_message => '' %>
    <%= f.input :first_name, :label => 'First Name',:label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'lf'} %>
    <%= f.input :last_name, :label => 'Last Name' , :label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'lf'} %>
    <%= f.input :email,:label => 'Email', :label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'lf'} %>
    <%= f.fields_for :address do |address_form| %>
    <%= address_form.input :address1, :label=> 'Address' , :label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'lf'}  %>
    <%= address_form.input :city, :label => 'City' ,:label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'lf'}  %>
    <%= address_form.input :state, :label => 'State',:label_html=>{:class => 'lf'}, :collection => State.all.map { |state| state.code }, :include_blank => 'Select',:input_html => {:class => 'lf'} %>
    <%= address_form.input :postal, :label => 'Zip Code' ,:label_html=>{:class => 'lf'}, :input_html => { :size => '5',:class => 'slf'} %>
    <%= address_form.input :country, :as => :hidden %>
    <% end %>
    <%= f.input :password, :label => '* Password',:label_html=>{:class => 'lf'}, :input_html => { :size => '10',:class => 'slf'}  %>
    <%= f.input :gender, :label => 'Your gender ',:label_html=>{:class => 'lf'}, :checked => 'F', :collection => [['Female ', 'F'], ['Male ', 'M']], :as => 'radio',:input_html => { :class => 'lf',:style=>'margin-left:8px'}  %>
    <%= f.input :dob, :label => '* Your birthdate ',:label_html =>{ :style =>'float: none', :class => 'lf'}, :as => :date,
            :start_year => Date.today.year - 17, :end_year => Date.today.year - 100, :order => [:month, :day, :year],
            :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' },
            :input_html => { :class => 'doblf' }, :use_short_month => true  %>
    <%= f.fields_for :child_attributes do |child_form| %>
              <%= child_form.input :dob, :required => false, :label_html =>{ :style =>'float: none' },
                :label => 'Child dob/Due date',:label_html=>{:class => 'lf', :style=>'white-space:nowrap'}, :as => :date, :start_year => Date.today.year + 1,
                :end_year => Date.today.year - 18, :order => [:month, :day, :year],
                :prompt => { :day => 'Day', :month => 'Month', :year => 'Year' },
                :input_html => {:class => 'doblf'} , :use_short_month => true%>
    <% end %>

    <div class="clear"></div>
    </fieldset>
    <div style='float:right'>
	
	
      <%= render 'partials/promoContainer' %>
    




  	<div id='logo-promo-1'>
        <h2>Pull great deals from brands you know and trust.</h2>
        <ul>
					<li><%= image_tag '/uploads/coreg/image/4/disney_logo_2011.jpg',:alt => "Coupons for Huggies Diapers", :size=>"80x" %></li>
					<li><%= image_tag 'logos/pampers-logo.gif',:alt => "Gerber Life Insurance", :size=>"80x" %></li>
					<li><%= image_tag 'logos/enfamil-logo.gif',:alt => "Playskool Coupons", :size=>"80x" %></li>
					<li><%= image_tag 'logos/chilis.gif',:alt => "Chilis Coupons", :size=>"80x46" %></li>
        </ul>
      </div>
      <div class="clear"></div>
    </div>
    <div class="clear"></div>
    <div style='float:left;margin: 20px auto 0 0;clear:both;width:904px;padding:0;height:34px'>
      <h2 class="color2" style='font-size:20px;line-height: 34px;height:34px;'><%= image_tag 'thmb-Delia.gif',:alt => 'Delia helps you find Deals', :size => '33x34', :align => 'left', :style => "float:left;margin:0 10px 20px 0;text-align: left;"  %> Check the offers and brands you like</h2>
    </div>
    <div id="coregs"></div>
    <% if Rails.env.staging? %>
    <script src="http://staging.dealsformommy.com/javascripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="http://staging.dealsformommy.com/api/optins/coregs.js?key=dfm_full_reg" type="text/javascript"></script>
    <% else %>
    <script src="/javascripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/api/optins/coregs.js?key=dfm_full_reg" type="text/javascript"></script>
    <% end %>
    <div class="actions">
      <script>utmx_section("section3")</script>
      <%= image_submit_tag 'bt-join.png', :name => 'submitButton',  :class => 'ml10', :style => 'width:119px;height:38px;margin-top:20px' %>
      </noscript>
    </div>
<% end %>
<div style="width:100%;font-size:11px;text-align: center;line-height: 20px">by joining dealsformommy.com, you agree to the <%= link_to 'terms of use', 'terms-of-use', :target=>'_blank' %> and <%= link_to 'privacy policy', 'privacy-policy' , :target=>'_blank' %></div>
</div>